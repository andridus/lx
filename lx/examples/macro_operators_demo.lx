defmacro infix +(left, right) do
{:__erl__, {:op, 1, :'+', left, right}}
end

defmacro infix -(left, right) do
{:__erl__, {:op, 1, :'-', left, right}}
end

defmacro infix *(left, right) do
{:__erl__, {:op, 1, :'*', left, right}}
end

