# Function definitions test
def factorial do
  (0) do 1 end
  (N) when N > 0 do N * factorial(N - 1) end
end

def greet(name) do
  "Hello, " ++ name
end

def add(x, y) do
  x + y
end

def test_functions() do
  result1 = factorial(5)
  result2 = greet("world")
  result3 = add(10, 20)

  {result1, result2, result3}
end