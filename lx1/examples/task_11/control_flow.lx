def categorize_age(age) do
    if age < 18 do
        "minor"
    else
        "adult"
    end
end

def process_result(result) do
    case result do
        {:ok, data} -> "Success"
        {:error, reason} -> "Error"
        _ -> "Unknown result"
    end
end

