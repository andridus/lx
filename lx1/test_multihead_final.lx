def test_lambda_oneline() do
    lambda = fn(x :: integer, y :: integer) -> x + y
    lambda.(3, 4)
end

def test_lambda_multiline() do
    lambda = fn(x :: integer, y :: integer) ->
        result = x + y
        result * 2
    end
    lambda.(5, 6)
end

def test_lambda_multihead() do
    lambda = fn do
        (:ok) -> "success"
        (:error) -> "failure"
        (_) -> "unknown"
    end
    lambda.(:ok)
end

def test_lambda_do_block() do
    lambda = fn(x :: integer) do
        doubled = x * 2
        doubled + 1
    end
    lambda.(10)
end
